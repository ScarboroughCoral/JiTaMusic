<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/thirdColor">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/demo"/>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        app:indicatorColor="@color/thirdColor"
        app:indicatorName="BallPulseIndicator" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_white"
        android:layout_margin="@dimen/marginSize"
        android:onClick="onBackClick"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:paddingTop="@dimen/marginSize"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/current_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/navBarTitleSize"
            android:textColor="@color/forthColor"
            android:padding="@dimen/marginTabSize"
            android:textStyle="bold"
            android:text="《不染》——毛不易"
            android:textAlignment="center"/>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/marginSize"
            android:layout_height="30dp"
            style="@style/Widget.AppCompat.SeekBar"
            android:outlineAmbientShadowColor="#f60"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/current_Time_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/forthColor"
                android:text="0:0"/>
            <TextView
                android:id="@+id/end_Time_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/forthColor"
                android:text="0:0"/>
        </LinearLayout>
        <!--播放按钮集合-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginSize"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/before"
                android:layout_width="0dp"
                android:layout_height="@dimen/controlIconSize"
                android:layout_weight="1"
                android:src="@drawable/last_white"
                android:scaleType="centerInside"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/btStart"
                android:layout_width="0dp"
                android:layout_height="@dimen/controlIconSize"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:background="#00000000"
                android:src="@drawable/play_white"/>
            <ImageButton
                android:id="@+id/pause"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="@dimen/controlIconSize"
                android:layout_weight="1"
                android:src="@drawable/pause_white"
                android:scaleType="centerInside"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="@dimen/controlIconSize"
                android:layout_weight="1"
                android:src="@drawable/next_white"
                android:scaleType="centerInside"
                android:background="#00000000"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>