<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/forthColor"
    android:paddingTop="@dimen/marginSize"
    android:paddingBottom="@dimen/marginSize"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_music_img"
        android:layout_width="@dimen/itemIconSize"
        android:layout_height="@dimen/itemIconSize"
        android:layout_marginLeft="@dimen/marginSize"
        android:src="@drawable/demo"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/marginSize">
        <TextView
            android:id="@+id/tv_music_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/thirdColor"
            android:textSize="@dimen/bodyTextSize"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="音乐名称"/>
        <TextView
            android:id="@+id/tv_music_author"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/bodyTextSize"
            android:textColor="@color/thirdColor"
            android:text="音乐作者"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/itemPlaySize"
        android:layout_height="@dimen/itemPlaySize"
        android:layout_marginLeft="@dimen/marginSize"
        android:layout_marginRight="@dimen/marginSize"
        android:layout_gravity="center_vertical"

        android:src="@drawable/play_white"/>

</LinearLayout>